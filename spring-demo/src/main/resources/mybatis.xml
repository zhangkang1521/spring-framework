<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>


  <!-- mybatis-spring-1.3.0之后可以通过spring配置 -->
  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <!--<setting name="autoMappingBehavior" value="FULL"/>-->
    <!--<setting name="proxyFactory" value="CGLIB"/>-->
    <!--<setting name="lazyLoadingEnabled" value="true"/>-->
    <!--<setting name="aggressiveLazyLoading" value="false"/>-->
    <!-- 一级缓存 -->
    <setting name="localCacheScope" value="STATEMENT"/>
    <!-- 二级缓存 -->
    <!--<setting name="cacheEnabled" value="false"/>-->
  </settings>


  <!-- ，这个配置会被spring覆盖，可以不配 -->
  <!-- 使用default和id一致的数据源 -->
  <environments default="default">
    <environment id="default">
      <!-- 事务管理类型，JDBC表示直接使用JDBC的提交和回滚设置，依赖于数据源得到的连接来管理事务 -->
      <transactionManager type="jdbc"/>
      <!-- JNDI UNPOOLED  POOLED 参考Configuration构造函数别名注册 -->
      <dataSource type="UNPOOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/zk"/>
        <property name="username" value="root"/>
        <property name="password" value="123456"/>
      </dataSource>
    </environment>
  </environments>

  <!-- 与spring配置共存 -->
  <mappers>
    <mapper resource="mappers2/OrderMapper.xml"></mapper>
  </mappers>


</configuration>
